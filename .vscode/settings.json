{
    // 仮想環境のパスを動的に指定
    "python.venvPath": "${workspaceFolder}/../venv",

    // デフォルトのPythonインタープリターのパスを動的に指定
    "python.defaultInterpreterPath": "${workspaceFolder}/../venv/bin/python3",

    // ターミナルでPythonスクリプトを実行するとき、仮想環境を自動で有効化
    "python.terminal.activateEnvironment": true,

    // Linux用ターミナルプロファイルを設定
    "terminal.integrated.profiles.linux": {
        "WSL": {
            "path": "/usr/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder} && source ${workspaceFolder}/../venv/bin/activate && exec bash"
            ]
        }
    },

    // デフォルトのターミナルプロファイルをWSLに設定
    "terminal.integrated.defaultProfile.linux": "WSL",

    // Windows用ターミナルプロファイル（必要に応じて）
    "terminal.integrated.profiles.windows": {
        "WSL": {
            "path": "C:\\WINDOWS\\System32\\wsl.exe",
            "args": []
        }
    },

    // Windows環境でのデフォルトターミナルをWSLに設定
    "terminal.integrated.defaultProfile.windows": "WSL"
}